@model IEnumerable<ZeroHunger.DTOs.RestaurantDTO>

@{
    ViewBag.Title = "All Restaurants";
    Layout = "/Views/Shared/_NGOnav.cshtml";
}

<div class="container">
    <h2>All Restaurants</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Restaurant Name</th>
                <th>Location</th>
                <th>Contact</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var restaurant in Model)
            {
                <tr>
                    <td>@restaurant.RestaurantName</td>
                    <td>@restaurant.Location</td>
                    <td>@restaurant.Contact</td>
                    <td>
                        <a href="@Url.Action("Details", "NGO", new { id = restaurant.RID })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Edit", "NGO", new { id = restaurant.RID })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "NGO", new { id = restaurant.RID })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
